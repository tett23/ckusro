{
  "name": "typescript-boilerplate",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "ckusro": "./bin/index.js"
  },
  "scripts": {
    "start": "yarn build",
    "build": "babel src --extensions .js,.jsx,.ts,.tsx --out-dir lib --source-maps",
    "watch": "yarn build --watch",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "lint": "tslint --fix -p ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tett23/typescript-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tett23/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/tett23/typescript-boilerplate#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "setupFiles": [
      "./__tests__/setup.ts"
    ],
    "testRegex": "(models/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules",
      "lib"
    ],
    "testURL": "http://localhost/"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/chokidar": "^1.7.5",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.10",
    "@types/js-yaml": "^3.11.4",
    "@types/lodash.merge": "^4.6.4",
    "@types/mdast": "^3.0.1",
    "@types/mkdirp": "^0.5.2",
    "@types/mock-fs": "^3.6.30",
    "@types/ramda": "^0.25.45",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/styled-components": "^4.1.5",
    "@types/unist": "^2.0.2",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.22",
    "@types/yargs": "^12.0.5",
    "babel-loader": "^8.0.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "core-js": "3.0.0-beta.10",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "jest": "^23.6.0",
    "mdast": "^3.0.0",
    "mock-fs": "^4.7.0",
    "prettier": "^1.12.1",
    "remark-parse": "^6.0.3",
    "remark-stringify": "^6.0.4",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-loader": "^3.6.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2",
    "unified": "^7.1.0",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@mdx-js/mdx": "^0.16.6",
    "chokidar": "^2.0.4",
    "fast-glob": "^2.2.6",
    "js-yaml": "^3.12.0",
    "lodash.merge": "^4.6.1",
    "mkdirp": "^0.5.1",
    "ramda": "^0.26.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "rehype-parse": "^6.0.0",
    "rehype-react": "^3.1.0",
    "remark-breaks": "^1.0.2",
    "remark-react": "^5.0.1",
    "remark-rehype": "^4.0.0",
    "styled-components": "^4.1.3",
    "uuid": "^3.3.2",
    "yargs": "^12.0.5"
  }
}
