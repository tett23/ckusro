{
  "name": "typescript-boilerplate",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "yarn build && node lib/index.js",
    "build": "babel src --extensions .js,.jsx,.ts,.tsx --out-dir lib --source-maps",
    "watch": "yarn build --watch",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "lint": "tslint --fix -p ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tett23/typescript-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tett23/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/tett23/typescript-boilerplate#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "setupFiles": [
      "./__tests__/setup.ts"
    ],
    "testRegex": "(models/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules",
      "lib"
    ],
    "testURL": "http://localhost/"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.10",
    "@types/mdast": "^3.0.1",
    "@types/mock-fs": "^3.6.30",
    "@types/ramda": "^0.25.45",
    "@types/unist": "^2.0.2",
    "babel-loader": "^8.0.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "core-js": "^2.6.1",
    "jest": "^23.6.0",
    "mdast": "^3.0.0",
    "mock-fs": "^4.7.0",
    "prettier": "^1.12.1",
    "remark-parse": "^6.0.3",
    "remark-stringify": "^6.0.4",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-loader": "^3.6.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2",
    "unified": "^7.1.0",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@mdx-js/mdx": "^0.16.6",
    "ramda": "^0.26.1"
  }
}
