{
  "name": "typescript-boilerplate",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "ckusro": "./bin/index.js"
  },
  "scripts": {
    "start": "yarn build",
    "build": "babel src --extensions .js,.jsx,.ts,.tsx --out-dir lib --source-maps",
    "watch": "yarn build --watch",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "lint": "tsc --noEmit && tslint --fix -p ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tett23/typescript-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tett23/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/tett23/typescript-boilerplate#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "setupFiles": [
      "./__tests__/setup.ts"
    ],
    "testRegex": "(models/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules",
      "lib"
    ],
    "testURL": "http://localhost/"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.12",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash.merge": "^4.6.6",
    "@types/mdast": "^3.0.2",
    "@types/memory-fs": "^0.3.2",
    "@types/mkdirp": "^0.5.2",
    "@types/mock-fs": "^3.6.30",
    "@types/ramda": "^0.26.8",
    "@types/react": "^16.8.15",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.8",
    "@types/styled-components": "^4.1.14",
    "@types/unist": "^2.0.3",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.29",
    "@types/yargs": "^13.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "core-js": "3.0.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest": "^24.7.1",
    "mdast": "^3.0.0",
    "mock-fs": "^4.9.0",
    "prettier": "^1.17.0",
    "remark-parse": "^6.0.3",
    "remark-stringify": "^6.0.4",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.5",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.6.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5",
    "unified": "^7.1.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.0.16",
    "chokidar": "^3.0.0",
    "fast-glob": "^2.2.6",
    "js-yaml": "^3.13.1",
    "lodash.merge": "^4.6.1",
    "memory-fs": "^0.4.1",
    "mkdirp": "^0.5.1",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "rehype-parse": "^6.0.0",
    "rehype-react": "^3.1.0",
    "remark-breaks": "^1.0.2",
    "remark-react": "^5.0.1",
