{
  "name": "@ckusro/ckusro-core",
  "version": "0.0.0",
  "description": "> TODO: description",
  "author": "tett23 <tett23@gmail.com>",
  "homepage": "https://github.com/tett23/ckusro/tree/master/packages/ckusro-core",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/src/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tett23/ckusro.git"
  },
  "scripts": {
    "build": "rm -rf lib/ && yarn run build:rollup",
    "build:rollup": "rollup -c",
    "build:dts": "tsc --declaration true --emitDeclarationOnly true --declarationDir lib --allowJs false",
    "prepare": "yarn test && yarn run build",
    "preflight": "yarn lint && yarn run test",
    "lint": "yarn run lint:ts && yarn run lint:eslint && yarn run lint:prettier",
    "lint:ts": "tsc -p . --noEmit",
    "lint:eslint": "eslint --ignore-path ../../.eslintignore --ext .js,.jsx,.ts,.tsx src __tests__",
    "lint:prettier": "prettier --config ../../.prettierrc.json --ignore-path ../../.prettierignore --write --no-editorconfig -c '**/*.@(js|jsx|ts|tsx|md|json|yml|yaml|toml|html)'",
    "test": "jest",
    "test-watch": "jest --watchAll"
  },
  "bugs": {
    "url": "https://github.com/tett23/ckusro/issues"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "./tsconfig.json"
      }
    },
    "setupFiles": [
      "./__tests__/setup.ts"
    ],
    "testRegex": "(models/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules",
      "lib"
    ],
    "testURL": "http://localhost/"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/node": "^12.0.4",
    "@types/pify": "^3.0.2",
    "@types/rimraf": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "core-js": "^3.1.2",
    "babel-preset-es2015-rollup": "^3.0.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^5.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "jest": "^24.8.0",
    "memfs": "^2.15.4",
    "pify": "^4.0.1",
    "prettier": "^1.18.2",
    "react": "~16.8.0",
    "react-dom": "~16.8.0",
    "rollup": "^1.16.7",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.21.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "unionfs": "^4.2.0"
  },
  "peerDependencies": {
    "core-js": "^3.0.0",
    "react": "~16.8.0",
    "react-dom": "~16.8.0"
  },
  "dependencies": {
    "isomorphic-git": "^0.55.2",
    "lodash.merge": "^4.6.1",
    "rehype-parse": "^6.0.0",
    "remark-breaks": "^1.0.3",
    "remark-parse": "^6.0.3",
    "remark-rehype": "^4.0.0",
    "rimraf": "^2.6.3",
    "unified": "^7.1.0"
  }
}
