{
  "name": "@ckusro/ckusro-core",
  "version": "0.0.0",
  "description": "> TODO: description",
  "author": "tett23 <tett23@gmail.com>",
  "homepage": "https://github.com/tett23/ckusro/tree/master/packages/ckusro-core",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tett23/ckusro.git"
  },
  "scripts": {
    "build": "rm -rf lib/ && yarn run build:parcel && yarn run build:dts",
    "build:parcel": "parcel build src/index.ts --target browser --bundle-node-modules --no-minify -d lib",
    "build:dts": "tsc --declaration true --emitDeclarationOnly true --declarationDir lib --allowJs false",
    "prepare": "yarn test && yarn run build",
    "test": "jest",
    "test-watch": "jest --watchAll"
  },
  "bugs": {
    "url": "https://github.com/tett23/ckusro/issues"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "setupFiles": [
      "./__tests__/setup.ts"
    ],
    "testRegex": "(models/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules",
      "lib"
    ],
    "testURL": "http://localhost/"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@types/node": "^12.0.4",
    "@types/pify": "^3.0.2",
    "jest": "^24.8.0",
    "memfs": "^2.15.4",
    "parcel-bundler": "^1.12.3",
    "pify": "^4.0.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "unionfs": "^4.2.0"
  },
  "dependencies": {
    "core-js": "^3.1.2",
    "isomorphic-git": "^0.55.2",
    "rehype-parse": "^6.0.0",
    "rehype-react": "^3.1.0",
    "remark-breaks": "^1.0.3",
    "remark-rehype": "^4.0.0",
    "unified": "^7.1.0"
  }
}
