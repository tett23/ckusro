{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "newLine": "LF",
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "esnext.asynciterable",
      "esnext.array"
    ],
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": [".git", "node_modules", "./__test__/**/*"],
  "eslint.autoFixOnSave": true
}
